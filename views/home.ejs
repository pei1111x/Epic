<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Epic Online</title>

    <style>
        body {
            background-color: #ffc1e396;
        }


        .custom-btn {
            background-color: #e9b0ffce;
            color: #fff;
            border-color: #e9b0ffce;
        }

        .custom-btn:hover {
            background-color: #e9b0ff;
            border-color: #e9b0ff;
            color: black; 
        }

        .custom-btn a {
            color: white; 
            text-decoration: none;
        }

        .card-link {
            color: black; 
            text-decoration: none; 
        }
    </style>
    
</head>
<body>
    <%- include('partials/header') %>

    <div class="text-center">
        <br>
        <h1>Epic Products</h1>
        <br>
    </div>

    <div class="container">
        <div class="row">
            <% for(let i = 0; i < products.length; i++) { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card text-center">
                        <a href="/product/<%= products[i].productId %>">
                            <img src="images/<%= products[i].image %>" class="card-img-top mx-auto" style="width: 160px; height: 200px;">
                        </a>
                        <div class="card-body">
                            <a href="/product/<%= products[i].productId %>" class="card-link"><%= products[i].productName%></a>

                            <div style="margin-top: 5px;">
                                <button class="custom-btn">
                                    <a href="/addtocart/<%= products[i].productId %>">Add to Cart</a>
                                </button>
                            </div>
                            <div style="margin-top: 5px;">
                                <button class="custom-btn">
                                    <a href="/editProduct/<%= products[i].productId %>">Edit</a>
                                </button>
                                <button class="custom-btn">
                                        <a href="/delect/<%= products[i].productId %>"onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

</body>
</html>