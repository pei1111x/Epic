<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Epic Online</title>
    <style>
        body {
            background-color: #ffc1e396;
        }

        .custom-btn {
            background-color: #e9b0ffce;
            color: #fff;
            border-color: #e9b0ffce;
        }

        .custom-btn:hover {
            background-color: #e9b0ff;
            border-color: #e9b0ff; 
        }

        .custom-btn a {
        color: white; 
        text-decoration: none;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    <div class="container">
        <br>
        <div class="text-center"><h2>Products Reviews</h2></div>
        <br>
      
        <table class="table table-hover small text-center">
          <thead>
              <tr>
                <th width="30">Order ID</th>
                <th width="100">Product Name</th>
                <th width="30">Rate</th>
                <th width="200">Review</th>
                <th width="10"></th>
              </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < review.length; i++) { %>
                <tr>
                    <td>#<%= review[i].orderId %></td>
                    <td><%= review[i].productName %></td>
                    <td><%= review[i].rate %></td>
                    <td><%= review[i].reviews %></td>
                    <td>
                        <button class="custom-btn">
                            <a href="/delectrev/<%= review[i].reviewId %>"onclick="return confirm('Are you sure you want to delete this review?')">Delete</a>
                        </button>
                    </td>
                </tr>
            <% } %>
        </tbody>
        </table>
    </div>

    <div class="row justify-content-center">
        <div class="col-auto">
            <a href="/review" class="btn custom-btn">Make Reviews</a>
        </div>
        <div class="col-auto">
            <a href="/search_Reviews" class="btn custom-btn">Search product reviews</a>
        </div>
    </div>

</body>
</html>